<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <%= form_for :product, method: 'get', url: '/search' do |f| %>
      <%= f.label :products %>
      <%= f.text_field :search %>
      <%= f.submit 'Search' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
